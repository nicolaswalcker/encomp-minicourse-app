{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "overrides": [
    {
      "files": ["*.js"]
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "package.json",
    "index.html",
    ".eslintrc.json"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-absolute-path": "off"
  }
}
